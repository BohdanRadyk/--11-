\\приклад№1
#define PI 3.14159
#include <stdio.h>
main()
{
  int a = 5;
  float b = 23.5;
  int c = 31000;
  printf("%d метрів тканини коштувало %f гривень \n", a, b);
  printf("значення числа PI рівне %f.\n", PI);
  printf("IBM сумсні комп'ютери набули широкого розповсюдження.\n ");
  printf("%c%d\n", '$', c);
}


