1)
#include <stdio.h>
int main(void)
{
struct { int a; int b;
} x, y;
x.a = 10;
y = x; /* присвоювання одної структури другій */ printf("%d", y.a);
return 0;
}


2)
#include <stdio.h>
#include <string.h>

struct student {
    char name[30];
    int kurs;
    int age;
};

int main() {
    struct student stud1;
    printf("Vvedit imya:");
    fgets(stud1.name, sizeof(stud1.name), stdin);

    size_t len = strlen(stud1.name);
    if (len > 0 && stud1.name[len - 1] == '\n') {
        stud1.name[len - 1] = '\0';
    }

    printf("Vvedit vik:");
    scanf("%d", &stud1.age);
    printf("Vvedit kyrs:");
    scanf("%d", &stud1.kurs);
    printf("Student %s\n", stud1.name);
    printf("Kyrs %d\n", stud1.kurs);
    printf("Vik %d\n", stud1.age);

    return 0;
}


3)
#include <stdio.h>
/* визначення структури*/ struct student
{
char name[30]; int kurs;
int age;
};
int main()
{
/* оголошення масиву на 10 структур */ struct student stud[10];
int i, n;
printf("Kilkict studentiv:"); scanf("%d", &n); for(i=0;i<n;i++)
{
printf("Vvedit imya:"); scanf("%s", stud[i].name); printf("Vvedit vik:"); scanf("%d", &stud[i].age); printf("Vvedit kurs:"); scanf("%d", &stud[i].kurs);
}
/* Виведення */ for(i=0;i<n;i++)
{
printf("Student %s\n", stud[i].name); printf("Kurs %d\n", stud[i].kurs); printf("Vik %d\n", stud[i].age);
}
}


4)
#include <stdio.h>

struct employee {
    char name[50];
    float weight;
    float height;
    int age;
};

int main() {
    struct employee emp;

    printf("Ім'я: ");
    scanf("%s", emp.name);

    printf("Вага (кг): ");
    scanf("%f", &emp.weight);

    printf("Висота (м): ");
    scanf("%f", &emp.height);

    printf("Вік: ");
    scanf("%d", &emp.age);

    printf("\nІнформація про працівника:\n");
    printf("Ім'я: %s\n", emp.name);
    printf("Вага: %.2f кг\n", emp.weight);
    printf("Висота: %.2f м\n", emp.height);
    printf("Вік: %d років\n", emp.age);

    return 0;
}
