















№task
#include <stdio.h>

int main() {
    float num1, num2, result;
    char oper;
    
    printf("Введіть перше число: ");
    scanf("%f", &num1);
    printf("Введіть друге число: ");
    scanf("%f", &num2);
    printf("Введіть операцію (+, -, *, /): ");
    scanf(" %c", &oper);

    if (oper == '+') {
        result = num1 + num2;
    } else if (oper == '-') {
        result = num1 - num2;
    } else if (oper == '*') {
        result = num1 * num2;
    } else if (oper == '/') {
  
        if (num2 != 0) {
            result = num1 / num2;
        } else {
            printf("Ділення на нуль неможливе.\n");
            return 1; 
        }
    } else {
        printf("Введено невірну операцію.\n");
        return 1;
    }

    //  результат
    printf("Результат: %.2f\n", result);

    return 0;
}
