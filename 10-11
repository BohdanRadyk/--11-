#include <stdio.h>

int main() {
    float num1, num2, result;
    char oper;

    printf("Введіть перше число: ");
    scanf("%f", &num1);
    printf("Введіть друге число: ");
    scanf("%f", &num2);
    printf("Введіть операцію (+, -, *, /): ");
    scanf(" %c", &oper);


    switch(oper) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        case '/':
            if (num2 != 0) {
                result = num1 / num2;
            } else {
                printf("Ділення на нуль неможливе.\n");
                return 1; 
            }
            break;
        default:
            printf("Введено невірну операцію.\n");
            return 1; 
    }

    // Виводимо результат
    printf("Результат: %.2f\n", result);

    return 0;
}

