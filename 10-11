/* Магічне число */
#include <stdio.h>
#include <stdlib.h>
main
int magic; /* магічне число */
int guess; /* спроба гравця */
magic = rand; /* генерація магічного числа */
printf("Vgaday magichne chus lo: ");
scanf("%d", &guess);
if(guess = magic) printf("** Virno ***);
return 0;

