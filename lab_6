1)
#include <stdio.h>

int main()
{
    float a = 23.5;
    float b = 3.14159;
    float c = a * b;

    printf("Значення змінної 'a' рівне %.2f.\n", a);
    printf("Значення числа 'пі' рівне %.5f.\n", b);
    printf("Сума сил комети набуває широкого розповсюдження.\n");
    printf("%d\n", '%');
    
    return 0;
}
2)
#include <stdio.h>

main()

{
printf("/%d/\n",557);
printf("/%10d/\n",557);
printf("/%-10d/\n\n",557);

printf("/%8d/\n",21949);
printf("/%8d/\n",-1611);
printf("/%8d/\n",-8380);
printf("/%8d/\n",2143);

printf("/%f/\n",6543.12);
printf("/%e/\n", 6543.12);
printf("/%4.2f\n", 6543.12);
printf("/%3.1f\n", 6543.12);
printf("/%10.3f/\n", 6543.12);
printf("/%10.3e/\n", 6543.12); 
    return 0;
}
3)
#include <stdio.h>
#define riadok "Чудова погода" 
main()

{
printf("/%2s/\n", riadok);
printf("/%15.s/\n", riadok);

printf("%d\n", 557);
printf("%o\n", 557);
printf("%x\n", 557);
printf("%d\n", -557);
    return 0;
}
4)
#include <stdio.h>
main()
{
int vik;
char name[30];
printf("Vash vik?\n");
scanf("%d",&vik);
printf("Vvedit vashe imya\n");
scanf("%s", name);
printf("Pryvit %s jakomy %d rokiv",name, vik);
    return 0;
}
5)
#include <stdio.h>
#include <conio.h>

#define STOP -1

int main() {
    char ch;
    ch = getchar();
    
    while (ch != STOP) {
        putchar(ch);
        ch = getchar();
    }
    
    return 0;
}
