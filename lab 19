#include <stdio.h>
#include <stdlib.h>

int main() {
    int f1, f2, f3, f4, f5;
    FILE* fp;
    fp = fopen("C:\\temp\\sample.txt", "w");
    fclose(fp);

    fp = fopen("C:\\temp\\sample.txt", "r");
    if (fp == NULL) {
        perror("Error opening file");
        return 1; // Return 1 to indicate an error
    }

    fscanf(fp, "%d\n%d\n%d\n%d\n%d\n", &f1, &f2, &f3, &f4, &f5);
    printf("The values are %d, %d, %d, %d, %d\n.", f1, f2, f3, f4, f5);

    fclose(fp);

include <stdio.h>

 int main() {
       FILE *file_ptr;
      char text[10];
       file_ptr = fopen("file.txt", "w");
       if(file_ptr==NULL)
         {
             printf("ERROR");
       }
         printf("ведіть текст\n");
         fgets(text,sizeof(text),stdin);
         fprintf(file_ptr,"%s",text);
         fclose(file_ptr);
         file_ptr = fopen("file.txt", "r");
         if(file_ptr==NULL)
             {
                 printf("ERROR");
            }
         while (fgets(text, sizeof(text), file_ptr) ) {
                 printf("%s", text);

             }
         return 0;
     }

