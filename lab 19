#include <stdio.h>

int main() {
    FILE* in;
    int ch;

    // Open the file for reading
    in = fopen("proba.txt", "r");
    if (in != NULL) {
        // Read characters until EOF is reached
        while ((ch = getc(in)) != EOF) {
            printf("%c", ch);  // Print each character
        }
        fclose(in);  // Close the file after reading
    } else {
        printf("Файл proba не відкривається\n");
    }

    return 0;
}
 
#include <stdio.h>

int main() {
    FILE* ff;
    int base;

    ff = fopen("sam", "r");
    if (ff == NULL) {
        printf("File 'sam' could not be opened.\n");
        return 1; // Return 1 to indicate an error
    }

    fscanf(ff, "%d", &base);
    fclose(ff);

    ff = fopen("data", "a");
    if (ff == NULL) {
        printf("File 'data' could not be opened.\n");
        return 1; // Return 1 to indicate an error
    }

    fprintf(ff, "sam is %d.\n", base);
    fclose(ff);

    return 0;
}
#include <stdio.h>
#define LINE 80

int main() {
    FILE* ff;
    char string[LINE];

    ff = fopen("opus", "r");
    if (ff == NULL) {
        perror("Помилка відкриття файлу 'opus'");
        return 1; // Повернення 1 для позначення помилки
    }

    while (fgets(string, LINE, ff) != NULL) {
        puts(string);
    }

    fclose(ff);

    return 0;


