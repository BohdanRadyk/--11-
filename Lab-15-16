#include <stdio.h>
#include <string.h>

int main(void)
{
    char s1[80], s2[80];
    fgets(s1, sizeof(s1), stdin);
    fgets(s2, sizeof(s2), stdin);
    s1[strcspn(s1, "\n")] = '\0';
    s2[strcspn(s2, "\n")] = '\0';
    printf("Dovzhina: %lu %lu\n", strlen(s1), strlen(s2));
    if(!strcmp(s1, s2)) printf("Ryadku rivni\n");
    strcat(s1, s2);
    printf("%s\n", s1);
    strcpy(s1, "Perevirka.\n");
    printf("%s", s1);
    return 0;
}


