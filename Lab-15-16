#include <stdio.h>

int main(void)
{
    int x[100];
    int t;
    for(t = 0; t < 100; ++t) x[t] = t;
    for(t = 0; t < 100; ++t) printf("%d ", x[t]);
    return 0;
}


3)
#include <stdio.h>
int main(void)
{
    int t, i, num[3][4];
    for(t=0; t<3; ++t)
        for(i=0; i<4; ++i)
            num[t][i] = (t*4)+i+1;
    for(t=0; t<3; ++t) {
        for(i=0; i<4; ++i)
            printf("%03d ", num[t][i]);
        printf("\n");
    }
    return 0;
}


4)
#include <stdio.h>
#define MAX 100
#define LEN 80
char text[MAX][LEN];
int main(void)
{
    int t, i, j;
    printf("Dlya vuhody vvedit pustuyiy ryadok.\n");
    for(t = 0; t < MAX; t++) {
        printf("%d: ", t);
        if(fgets(text[t], LEN, stdin) == NULL) break;
       
        if(text[t][0] == '\n') break;
        for(j = 0; text[t][j] != '\0'; j++) {
            if(text[t][j] == '\n') {
                text[t][j] = '\0';
                break;
            }
        }
    }
    for(i = 0; i < t; i++) {
        for(j = 0; text[i][j]; j++) putchar(text[i][j]);
        putchar('\n');
    }
    return 0;
}


5)
#include <stdio.h>

int main(void) {
    int array[10];
    int sum = 0;

    printf("Введіть 10 цілих чисел:\n");
    for (int i = 0; i < 10; i++) {
        printf("Число %d: ", i + 1);
        scanf("%d", &array[i]);
        sum += array[i];
    }

    printf("Введений масив: ");
    for (int i = 0; i < 10; i++) {
        printf("%d ", array[i]);
    }
    printf("\n");

    printf("Сума елементів масиву: %d\n", sum);

    return 0;
}



