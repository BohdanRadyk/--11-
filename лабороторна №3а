#include <stdio.h>

int main(void) {
    float var1, var2;
    printf("Введіть перше число (var1): ");
    scanf("%f", &var1);
    printf("Введіть друге число (var2): ");
    scanf("%f", &var2);

    printf("var1 > var2 дає %d\n", var1 > var2);
    printf("var1 < var2 дає %d\n", var1 < var2);
    printf("var1 == var2 дає %d\n", var1 == var2);
    printf("var1 >= var2 дає %d\n", var1 >= var2);
    printf("var1 <= var2 дає %d\n", var1 <= var2);
    printf("var1 != var2 дає %d\n", var1 != var2);
    printf("!var1 дає %d\n", !var1);
    printf("!var2 дає %d\n", !var2);
    printf("var1 || var2 дає %d\n", var1 || var2);
    printf("var1 && var2 дає %d\n", var1 && var2);

    return 0;
}





#include <stdio.h>
#define TRUE "ІСТИНА"
#define FALSE "ХИБНІСТЬ"

int main(void) {
    float var1, var2;
    printf("Введіть перше число (var1): ");
    scanf("%f", &var1);
    printf("Введіть друге число (var2): ");
    scanf("%f", &var2);
    printf("var1 > var2 це %s\n", var1 > var2 ? TRUE : FALSE);
    printf("var1 < var2 це %s\n", var1 < var2 ? TRUE : FALSE);
    printf("var1 == var2 це %s\n", var1 == var2 ? TRUE : FALSE);
    printf("var1 >= var2 це %s\n", var1 >= var2 ? TRUE : FALSE);
    printf("var1 <= var2 це %s\n", var1 <= var2 ? TRUE : FALSE);
    printf("var1 != var2 це %s\n", var1 != var2 ? TRUE : FALSE);
    printf("!var1 це %s\n", !var1 ? TRUE : FALSE);
    printf("!var2 це %s\n", !var2 ? TRUE : FALSE);
    printf("var1 || var2 це %s\n", var1 || var2 ? TRUE : FALSE);
    printf("var1 && var2 це %s\n", var1 && var2 ? TRUE : FALSE);
    return 0;
}







#include <stdio.h>

int main() {
    int x, y, z;
    x = 2;
    y = 1;
    z = 0;
    x = x && y || z;
    printf("%d\n", x);
    printf("%d\n", x || !y && z);

    return 0;
}








#include <stdio.h>   // Підключення стандартної бібліотеки введення-виведення для функцій, таких як printf.
#include <conio.h>   // Підключення бібліотеки введення-виведення консолі для функцій, таких як getch.

void main() {       // Головна функція, де починається виконання програми.
    int a = 0, b = 3, c;   // Оголошення та ініціалізація цілочисельних змінних a, b і c.
    c = b % 2 || (a >= 0) && (++b / (2 * a)) == 0;   // Обчислення виразу та присвоєння його значення змінній c.
    printf("a=%d, c=%d\n", a, c);   // Виведення значень змінних a та c.
    getch();   // Очікування натискання клавіші перед закриттям вікна консолі.
}







#include <stdio.h>   // Підключення стандартної бібліотеки введення-виведення для функцій, таких як printf.
#include <conio.h>   // Підключення бібліотеки введення-виведення консолі для функцій, таких як getch.

int main() {       // Головна функція, де починається виконання програми.
    int a = 1, b = 0, c;   // Оголошення та ініціалізація цілочисельних змінних a, b і c.
    c = (b ^ 2) || (a >= 0) && (++b * a) == 0;   // Обчислення виразу та присвоєння його значення змінній c.
    printf("c=%d\n", c);   // Виведення значення змінної c.
    getch();   // Очікування натискання клавіші перед закриттям вікна консолі.
    return 0;   // Повертаємо 0, що означає успішне завершення програми.
}







#include <stdio.h>   // Підключення стандартної бібліотеки введення-виведення для функцій, таких як printf.
#include <conio.h>   // Підключення бібліотеки введення-виведення консолі для функцій, таких як getch.

void main() {       // Головна функція, де починається виконання програми.
    int x = 1, y = 2, z;   // Оголошення та ініціалізація цілочисельних змінних x, y і z.
    z = (x / 2 * 7 <= 0) && (y < 0) || (y % x == 0);   // Обчислення виразу та присвоєння його значення змінній z.
    printf("z=%d\n", --z);   // Виведення значення змінної z з попереднім декрементом.
    getch();   // Очікування натискання клавіші перед закриттям вікна консолі.
}








#include <stdio.h>   // Підключення стандартної бібліотеки введення-виведення для функцій, таких як printf.
#include <conio.h>   // Підключення бібліотеки введення-виведення консолі для функцій, таких як getch.

void main() {       // Головна функція, де починається виконання програми.
    int x = 1, z, b = 0, y = 2;   // Оголошення та ініціалізація цілочисельних змінних x, z, b і y.
    z = (x++ * y >= 0) || b++ || (x / y * 3 == 0);   // Обчислення виразу та присвоєння його значення змінній z.
    printf("z=%d\n", z);   // Виведення значення змінної z.
    getch();   // Очікування натискання клавіші перед закриттям вікна консолі.
}









#include <stdio.h>   // Підключення стандартної бібліотеки введення-виведення для функцій, таких як printf.
#include <conio.h>   // Підключення бібліотеки введення-виведення консолі для функцій, таких як getch.

void main() {       // Головна функція, де починається виконання програми.
    int x = 1, y = 0, z = 2, a = 0;   // Оголошення та ініціалізація цілочисельних змінних x, y, z і a.
    z = ((a = x++) * y == 0 || a < 0 && z);   // Обчислення виразу та присвоєння його значення змінній z.
    printf("z=%d\n", z);   // Виведення значення змінної z.
    getch();   // Очікування натискання клавіші перед закриттям вікна консолі.
}











#include <conio.h>   // Підключення бібліотеки введення-виведення консолі для функцій, таких як getch.
#include <stdio.h>   // Підключення стандартної бібліотеки введення-виведення для функцій, таких як printf.

void main() {       // Головна функція, де починається виконання програми.
    int x = 2, z, y = 0;   // Оголошення та ініціалізація цілочисельних змінних x, z і y.
    z = (x = 0) && (y = x) || (y > 0);   // Обчислення виразу та присвоєння його значення змінній z.
    printf("Z = %d\n", z);   // Виведення значення змінної z.
    getch();   // Очікування натискання клавіші перед закриттям вікна консолі.
}












#include <stdio.h>   // Підключення стандартної бібліотеки введення-виведення для функцій, таких як printf.
#include <conio.h>   // Підключення бібліотеки введення-виведення консолі для функцій, таких як getch.

void main() {       // Головна функція, де починається виконання програми.
    int x = 0, y = 3, z;   // Оголошення та ініціалізація цілочисельних змінних x, y і z.
    z = (++x > y || y && y > 0);   // Обчислення виразу та присвоєння його значення змінній z.
    printf("z=%d\n", z);   // Виведення значення змінної z.
    getch();   // Очікування натискання клавіші перед закриттям вікна консолі.
}











#include <stdio.h>
#include <conio.h>

void main() {
    unsigned int x = 2, y = 1, z = 3, res;
    char chx = 0xAF;
    printf("%u\n", x & y | z);
    x = y = z = 2; /* 3 */
    printf("%u\n", x * y & z);
    x = 3; y = 0; z = 1; /* 2 */
    printf("x^y/~z=%u\n", x ^ y / ~z); /* 65535 */
    printf("3/0^~1=%u\n", x | y ^ ~z); /* 65535 == 11111111 */
    x = 1; y = 2; z = 0;
    printf("1&2/0=%u\n", x & y | z); /* 0 */
    printf("~1^2&0=%u\n", ~x ^ y & z); /* 65534 - 11111110 */
    printf("2|0&1=%u\n", y | z & x); /* 2 */
    printf("2++&~0~1=%u\n", y++ & ~z & ~x); /* 65534 - 11111110 */
    printf("~3/1&++0=%u\n", ~y | x & ++z); /* 65533 = 11111101 */
    x = 0xAF;
    printf("%X\n", x >> 4); /* A */
    chx <<= 7;
    printf("0x=%X\n", chx); /* (FF)80 = 10000000 */
    getch();
}









#include <stdio.h>
#include <conio.h>

void main() {
    char x = 255, y = 0177;
    printf("%u\n", x & y);
    x = '(';
    y = 017;
    printf("%u\n", x & ~y);
    y = 127;
    printf("%u\n", x & y);
    y = 128;
    printf("%u\n", x | y);
}










