1)
#include <stdio.h>
#include <math.h>

#define N 32

int main() {
    double max_value = -INFINITY;
    double min_value = INFINITY;

    printf("   i   |   y\n");
    printf("-------|-------------------\n");
    for (int i = 0; i <= 31; i++) {
        double y = (i - i * i) / exp(i / 100.0) * sin(2 * M_PI * i / N) / N;
        printf("%6d | %18.10f\n", i, y);

        if (y > max_value) {
            max_value = y;
        }
        if (y < min_value) {
            min_value = y;
        }
    }

    printf("\nНайбільше значення функції: %.10f\n", max_value);
    printf("Найменше значення функції: %.10f\n", min_value);

    return 0;
}
2)
  #include<stdio.h>
#include<math.h>

int main(void) {
    int i = 0; // лічильник ітерацій
    double precision_double = 1.0; // обчислювана точність відносно числа 1.0 для double
    long double precision_long_double = 1.0L; // обчислювана точність відносно числа 1.0 для long double

    printf("За допомогою циклу for:\n");
    for (i = 0; precision_double / 2.0 + 1.0 > 1.0; i++) {
        precision_double /= 2.0;
    }
    printf("Число ділень на 2 (double): %d\n", i);
    printf("Машинний нуль (double): %.17e\n", precision_double);

    printf("\nЗа допомогою циклу while:\n");
    i = 0;
    while (precision_double / 2.0 + 1.0 > 1.0) {
        precision_double /= 2.0;
        i++;
    }
    printf("Число ділень на 2 (double): %d\n", i);
    printf("Машинний нуль (double): %.17e\n", precision_double);

    printf("\nЗа допомогою циклу do-while:\n");
    i = 0;
    do {
        precision_double /= 2.0;
        i++;
    } while (precision_double / 2.0 + 1.0 > 1.0);
    printf("Число ділень на 2 (double): %d\n", i);
    printf("Машинний нуль (double): %.17e\n", precision_double);

    printf("\nДля типу long double:\n");
    i = 0;
    while (precision_long_double / 2.0L + 1.0L > 1.0L) {
        precision_long_double /= 2.0L;
        i++;
    }
    printf("Число ділень на 2 (long double): %d\n", i);
    printf("Машинний нуль (long double): %.17Le\n", precision_long_double);

    return 0;
}
3)
#include <stdio.h>

int main() {
    int rows = 10; // Кількість рядків (висота трикутника)
    int i, j;
    char symbol = 'd'; // Початковий символ

    for (i = 1; i <= rows; i++) {
        for (j = 1; j <= i; j++) {
            printf("%c", symbol); // Виведення символу
        }
        symbol++; // Збільшення коду символу
        printf("\n");
    }

    return 0;}
4)
#include <stdio.h>
#include <math.h>

int main() {
    int N;
    double x = 1, y = 1, S = 0;

    printf("Введіть натуральне число N: ");
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) {
        S += x / i;
        x *= 0.5;
        y += x;
    }

    printf("Значення суми S: %.10f\n", S);

    return 0;
}
5)
#include <stdio.h>
#include <math.h>

int main() {
    double x, y_series = 0;
    int iterations = 0;
    double a = 0.00001;

    printf("Введіть значення x (в межах [0, π/2]): ");
    scanf("%lf", &x);

    double term = x;
    while (fabs(term) >= a) {
        y_series += term;
        iterations++;
        term *= -x * x / ((2 * iterations) * (2 * iterations + 1));
    }

    double y_library = sin(x);

    printf("Значення y за допомогою ряду: %.10f\n", y_series);
    printf("Значення y за допомогою бібліотечної функції: %.10f\n", y_library);
    printf("Кількість ітерацій (членів ряду): %d\n", iterations);

    return 0;
}

