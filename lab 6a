int main() {
    double a = 1000, b = 0.0001;
    double result;

    result = ((a + b) * (a + b) - (a * a + 2 * a * b)) / (b * b);

    printf("((a + b)^2 - (a^2 + 2ab)) / (b^2) = %.15f\n", result);

    return 0;
