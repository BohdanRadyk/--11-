#include <stdio.h>

int main() {
    int vik;
    char name[30];

    printf("Vash vik?\n");
    scanf("%d", &vik);
    printf("Uvedit vashe imja\n");
    scanf("%s", name);

    printf("\033[2J"); // Очистка екрану

    printf("Pryvit %s jakomu %d rokiv\n", name, vik);

    return 0;
}
#include <stdio.h>

int main() {
    int integerNumber = 42;
    float floatNumber = 3.14159;
    char character = 'A';
    long longNumber = 123456789;
    printf("Integer: %d\n", integerNumber);
    printf("Integer with width modifier: %5d\n", integerNumber);
    printf("Integer with zero padding: %05d\n", integerNumber);
    printf("Integer with left justification: %-5d\n", integerNumber);
    printf("Float: %f\n", floatNumber);
    printf("Float with precision: %.2f\n", floatNumber);
    printf("Float with exponent format: %e\n", floatNumber);
    printf("Character: %c\n", character);
    printf("Character as integer: %d\n", character);
    printf("Long: %ld\n", longNumber);
    printf("Long with width modifier: %10ld\n", longNumber);

    return 0;
}

#include <stdio.h>

int main() {
    printf("Decimal\tOctal\tHexadecimal\n");
    printf("1\t%o\t%x\n", 1, 1);
    printf("3\t%o\t%x\n", 3, 3);
    printf("5\t%o\t%x\n", 5, 5);
    printf("7\t%o\t%x\n", 7, 7);
    printf("45\t%o\t%x\n", 45, 45);
    printf("8\t%o\t%x\n", 8, 8);
    printf("78\t%o\t%x\n", 78, 78);
    printf("6\t%o\t%x\n", 6, 6);

    return 0;
}
#include <stdio.h>

int main() {
    float price_1, price_2, price_3;
    int quantity_1, quantity_2, quantity_3;
    float total;

    printf("Enter price of item 1: ");
    scanf("%f", &price_1);
    printf("Enter quantity of item 1: ");
    scanf("%d", &quantity_1);

    printf("Enter price of item 2: ");
    scanf("%f", &price_2);
    printf("Enter quantity of item 2: ");
    scanf("%d", &quantity_2);

    printf("Enter price of item 3: ");
    scanf("%f", &price_3);
    printf("Enter quantity of item 3: ");
    scanf("%d", &quantity_3);

    total = price_1 * quantity_1 + price_2 * quantity_2 + price_3 * quantity_3;

    printf("\nTotal purchase amount: %.2f\n", total);

    return 0;
}
#include <stdio.h>
#include <math.h>

#define PI 3.14159265359

int main() {
    float radius, circumference, area;

    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    circumference = 2 * PI * radius;
    area = PI * pow(radius, 2);

    printf("Circumference: %.2f\n", circumference);
    printf("Area: %.2f\n", area);

    return 0;
}
