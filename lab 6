#include <stdio.h>

#define PI 3.14159

int main() {
    int a = 5;
    float b = 23.5; // Замінив "," на "."
    int c = 31000;

    printf("%d метрів тканини коштувало %.2f гривень.\n", a, b); // Додав "%.2f" для виведення з двома знаками після коми

    printf("Значення числа PI рівне %.5f.\n", PI); // Додав "%.5f" для виведення PI з п'ятьма знаками після коми

    printf("\nсумісні\nкомп'ютери\nIBM\nнабули\nширокого\nрозповсюдження.\n"); // Виправив дужку ")" на кінці рядка

    printf("%c%d\n", '$', c);

    return 0;
}

#include <stdio.h>

int main() {
    printf("/%d/\n", 557);     // Друкує: /557/
    printf("/%10d/\n", 557);   // Друкує: /       557/ (10 пробілів перед числом)
    printf("/%-10d/\n", 557);  // Друкує: /557       / (10 пробілів після числа)

    return 0;
}

include <stdio.h>

int main() {
    printf("%d\n", 21949);   // Друкує: 21949
    printf("%d\n", -1611);   // Друкує: -1611
    printf("%8d\n", -8380);  // Друкує:    -8380 (8 пробілів перед числом)
    printf("%d\n", 2143);    // Друкує: 2143

    return 0;
}
#include <stdio.h>

int main() {
    printf("/ %f\n", 6543.21);         // Друкує: / 6543.210000
    printf("/%e\n", 6543.21);          // Друкує: /6.543210e+03
    printf("/%4.2f\n", 6543.21);       // Друкує: /6543.21
    printf("/%3./\n", 6543.21);        // Друкує: / 6543.210000/ (помилка в форматі)
    printf("/%10.3f\n", 6543.21);      // Друкує: /  6543.210/
    printf("/%10.3e\n", 6543.21);      // Друкує: / 6.543e+03/

    return 0;
}
#include <stdio.h>

#define riadok "Чудова погода"

int main() {
    printf("%2s/\n", riadok);    // Друкує: / Ч/
    printf("%15.s/\n", riadok);  // Друкує: /  Чудова погода/

    return 0;
}
#include <stdio.h>

int main() {
    printf("%d\n", 557);  // Друкує: 557 (десяткове число)
    printf("%o\n", 557);  // Друкує: 1055 (вісімкове число)
    printf("%x\n", 557);  // Друкує: 22d (шістнадцяткове число)
    printf("%d\n", -557); // Друкує: -557 (десяткове число)

    return 0;
}
#include <stdio.h>

int main() {
    printf("%d\n", 557);  // Друкує: 557 (десяткове число)
    printf("%o\n", 557);  // Друкує: 1055 (вісімкове число)
    printf("%x\n", 557);  // Друкує: 22d (шістнадцяткове число)
    printf("%d\n", -557); // Друкує: -557 (десяткове число)

    return 0;
}
