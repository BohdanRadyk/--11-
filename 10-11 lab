/* Підрахунок кількості пробілів */
#include <stdio.h>
int main(void)
char s[80], *str;
int space;
printf("Vvedit riadok: ");
gets(s);
str = s;
for(space=0; *str; str++) {
if(*str != '*) continue;
space++;
}
printf("d probilivin", space);
return 0;
}


3. Виконати програму, яка ілюструє розгалуження умовними операторами та
пояснити отримані результати:
#include <stdio.h>
#include <conio.h>

void main() {
int a = 2, b = 0, c = 1; // Оголошення та ініціалізація цілих змінних a, b і c

printf("\n\n");

if(a > 0 && b <= 3) // Умова перевіряє, чи a більше 0 та b менше або дорівнює 3
c = b * b / a; // Якщо умова виконується, обчислюється c як b у квадраті, поділений на a
printf("c=%d\n", c); // Виводиться значення c

/*c=1*/
a = ++c / a + a % c; // Змінюються значення a і c на основі операцій передварного інкременту та залишку від ділення

b += c * c; // До значення b додається квадрат c

if(a < b || a < 0) { // Умова перевіряє, чи a менше b або менше нуля
c *= a; // Якщо умова виконується, c множиться на a
printf("c=%d\n", c); // Виводиться значення c
} /*c=2*/
else if (c++ == 2) // Інакше, якщо c збільшується на 1 та дорівнює 2
printf("c=%d\n", c); // Виводиться значення c

if(b < a && a == 2) // Умова перевіряє, чи b менше a і чи a дорівнює 2
c = 2 * a + 1; // Якщо умова виконується, c обчислюється як 2 помножене на a плюс 1
else {
c = (b--) + a; // Інакше, c обчислюється як поточне значення b плюс a, а b зменшується на 1
a = 0; // Задається значення a нулю
}
printf("c=%d\n", c); // Виводиться значення c
/*c=5*/

a = b = 2; // Задаються як a, так і b значення 2

if(c = 3) // Умова перевіряє, чи c призначається значення 3
if(a < 0 || a > c) // Вкладена умова перевіряє, чи a менше нуля або більше за c
c = 0; // Якщо умова виконується, c задається як 0
else {
a = 1; // Інакше, a задається як 1
c = 7; // Задається значення c 7
printf("c=%d\n", c); // Виводиться значення c
} /*c=7*/
if(c > 0 && c < 10) { // Умова перевіряє, чи c більше 0 і менше 10
if(a > 0) // Вкладена умова перевіряє, чи a більше 0
printf("c=%d\n", c++); // Якщо умова виконується, виводиться значення c, а потім c збільшується на 1
} /*c=7*/
else
c = 10; // Інакше, значення c задається 10

if(c <= 5) // Умова перевіряє, чи c менше або дорівнює 5
if((a = b + 1) > 2) // Вкладена умова перевіряє, чи результат операції присвоювання та порівняння більший за 2
c %= 2; // Якщо умова виконується, обчислюється залишок від ділення c на 2
printf("c=%d\n", c); // Виводиться значення c
/*c=8*/

a = 3; // Задається значення a 3
b = -1; // Задається значення b -1

if(b > 0) // Умова перевіряє, чи b більше 0
c = 1; // Якщо умова виконується, c задається 1
else if(b - 10) { // Інакше, якщо результат віднімання не дорівнює 0
c = -1; // Якщо умова виконується, c задається -1
printf("c=%d\n", c); // Виводиться значення c
}
else if(b <= -3) // Інакше, якщо b менше або дорівнює -3
c = 2; // Якщо умова виконується, c задається 2
else
c = b * b + 10; // Інакше, c обчислюється як квадрат b плюс 10

printf("c=%d\n", c); // Виводиться значення c
getch(); // Очікується введення символу
/*c=11*/
}



4. Написати програму для здійснення базових арифметичних операцій (додавання, віднімання, множення, ділення) над двома числами, використовуючи умовний оператор if. Врахувати, що на нуль ділити не можна. Значення чисел та знак операції вводяться з клавіатури.

#include <stdio.h>

int main() {
    float num1, num2, result;
    char oper;

    printf("Введіть перше число: ");
    scanf("%f", &num1);
    printf("Введіть друге число: ");
    scanf("%f", &num2);
    printf("Введіть операцію (+, -, *, /): ");
    scanf(" %c", &oper);


    switch(oper) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        case '/':
            if (num2 != 0) {
                result = num1 / num2;
            } else {
                printf("Ділення на нуль неможливе.\n");
                return 1; 
            }
            break;
        default:
            printf("Введено невірну операцію.\n");
            return 1; 
    }

    // Виводимо результат
    printf("Результат: %.2f\n", result);

    return 0;
}








Висновок : 
На даній лабораторній роботі навчався використовувати умовні оператори та оператори переходу під час програмування на мові С.
