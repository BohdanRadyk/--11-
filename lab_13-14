1)
#include <stdio.h>
#include <math.h>

double geron(double a, double b, double c) {
    double p = (a + b + c) / 2;
    return sqrt(p * (p - a) * (p - b) * (p - c));
}

int main() {
    double u, v, w;
    double s;

    printf("Введіть сторони трикутника: ");
    scanf("%lf %lf %lf", &u, &v, &w);
    
    s = geron(u, v, w);
    printf("Площа 1 трикутника: %.2lf\n", s);
    
    s = geron(10.3, 8.1, 9.7);
    printf("Площа 2 трикутника: %.2lf\n", s);

    s = geron(u + 10.3, v + w, w * 1.7);
    printf("Площа 3 трикутника: %.2lf\n", s);

    return 0;
}
2)
#include <stdio.h>

int x;

void f();
void g();

int main() {
    x = 0;
    f();
    g();
    return 0;
}

void f() {
    x = 8;
}

void g() {
    printf("%d\n", x);
}
3)
#include <stdio.h>
#include <math.h>

double fract(int x, int y) {
    double t;
    t = (double)(x % y) / y;
    return t;
}

int main() {
    int m, n;
    scanf("%d %d", &m, &n);
    printf("%lf\n", fract(m + 1, n + 1));
    return 0;
}
