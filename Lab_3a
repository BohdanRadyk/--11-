#include <stdio.h>

int main() {
  float var1, var2;

  printf("Введіть перше число: ");
  scanf("%f", &var1);

  printf("Введіть друге число: ");
  scanf("%f", &var2);

  if (var1 > var2) {
    printf("Перше число більше за друге.\n");
  } else if (var1 < var2) {
    printf("Друге число більше за перше.\n");
  } else {
    printf("Числа рівні.\n");
  }

  if (var1 >= var2) {
    printf("Перше число не менше за друге.\n");
  }

  if (var1 <= var2) {
    printf("Перше число не більше за друге.\n");
  }

  if (var1 != var2) {
    printf("Числа не рівні.\n");
  }

  if (var1) {
    printf("Перше число не дорівнює нулю.\n");
  }

  if (var2) {
    printf("Друге число не дорівнює нулю.\n");
  }

  if (var1 || var2) {
    printf("Принаймні одне з чисел не дорівнює нулю.\n");
  }

  if (var1 && var2) {
    printf("Обидва числа не дорівнюють нулю.\n");
  }

  return 0;
}





2)
#include <stdio.h>
#define TRUE "ІСТИНА"
#define FALSE "ХИБНІСТЬ"

int main(void) {
    float var1, var2;
    printf("Введіть перше число (var1): ");
    scanf("%f", &var1);
    printf("Введіть друге число (var2): ");
    scanf("%f", &var2);
    printf("var1 > var2 це %s\n", var1 > var2 ? TRUE : FALSE);
    printf("var1 < var2 це %s\n", var1 < var2 ? TRUE : FALSE);
    printf("var1 == var2 це %s\n", var1 == var2 ? TRUE : FALSE);
    printf("var1 >= var2 це %s\n", var1 >= var2 ? TRUE : FALSE);
    printf("var1 <= var2 це %s\n", var1 <= var2 ? TRUE : FALSE);
    printf("var1 != var2 це %s\n", var1 != var2 ? TRUE : FALSE);
    printf("!var1 це %s\n", !var1 ? TRUE : FALSE);
    printf("!var2 це %s\n", !var2 ? TRUE : FALSE);
    printf("var1 || var2 це %s\n", var1 || var2 ? TRUE : FALSE);
    printf("var1 && var2 це %s\n", var1 && var2 ? TRUE : FALSE);
    return 0;
}

3)
#include <stdio.h>

int main() {
    int x, y, z;
    x = 2;
    y = 1;
    z = 0;
    x = x && y || z;
    printf("%d\n", x);
    printf("%d\n", x || !y && z);

    return 0;
}

4)
#include <stdio.h>

int main() {
  int a, b, c;

  a = 0;
  b = 3;
  c = 0;

  c = b % 2;  // Отримати залишок від ділення b на 2 і зберегти у c
  printf("a=%d, c=%d\n", a, c); 

  return 0;
}

5)
) #include <stdio.h>
#include <conio.h>

int main() {
  int a = 1, b = 0, c;

  c = (b ^ 2) || (a >= 0) && (++b * a) == 0;

  printf("c=%d\n", c);

  getch();

  return 0;
}

6)
#include <stdio.h>
#include <conio.h>

void main() {
  // Деталізація змінних
  int x = 1, y = 2, z;

  // Призначення значення змінній z
  z = (x / 2 * 7 <= 0) && (y < 0) || (y % x == 0);

  // Виведення значення z (після декременту)
  printf("z=%d\n", --z);  // Зверніть увагу на пре-декремент

  // Очікування натискання клавіші (getch з conio.h)
  getch();

  // Немає оператора return, програма завершується після досягнення кінця main

7)
) #include <stdio.h>
#include <conio.h>

void main() {
  int x = 1, z, b = 0, y = 2;
  z = (x++ * y >= 0) || b++ || (x / y * 3 == 0); // x++ * y >= 0 || b++ || x / y * 3 == 0
  printf("z=%d\n", z); // z = 1
  getch();
}

8)
#include <conio.h>
#include <stdio.h>

void main() {
    int x = 2, z, y = 0;
    z = (x = 0) && (y = x) || (y > 0); //в кожній буде 0
    printf("Z = %d\n", z); /* Z = 0 */
    getch();
}


9)
#include <stdio.h> 

void main() {
  int x = 0, y = 3, z; // Деталізація змінних
  z = (++x > y || y && y > 0); // Оцінювання виразу для z
  printf("z=%d\n", z); // Виведення z (z буде 1)
  getch(); // Очікування натискання клавіші (conio.h specific)
}


10)
#include <stdio.h>

int main() {
    unsigned int x = 2, y = 1, z = 3;
    char chx = 0xAF;

    printf("%u\n", x & y | z);
    x = y = z = 3;
    printf("%u\n", x * y & z);
    x = 3; y = 0; z = 2;
    printf("x^y/~z=%u\n", x ^ y / ~z);
    printf("3/0^~1=%u\n", 3 / (0 ^ ~1)); // Виправлено помилку ділення на 0
    x = 1; y = 2; z = 0;
    printf("1&2/0=%u\n", 1 & (2 / 0)); // Виправлено помилку ділення на 0
    printf("~1^2&0=%u\n", ~1 ^ 2 & 0);
    printf("2|0&1=%u\n", 2 | 0 & 1);
    printf("2++&~0~1=%u\n", ++y & ~0 & ~1); // Виправлено префіксний інкремент
    printf("~3/1&++0=%u\n", ~3 / 1 & ++z); // Виправлено префіксний інкремент та ділення на 0
    x = 0xAF;
    printf("%X\n", x >> 4);
    chx <<= 7;
    printf("0x=%X\n", chx);

    return 0;
}

11)
#include <stdio.h>

int main() {
    char x = 255, y = 0177; // Виправлено помилку: використовано символьний тип, а не беззнаковий
    printf("%u\n", (unsigned char)x & (unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    x = '(';
    y = 017;
    printf("%u\n", (unsigned char)x & ~(unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    y = 127;
    printf("%u\n", (unsigned char)x & (unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    y = 128;
    printf("%u\n", (unsigned char)x | (unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    return 0;
}


