#include <stdio.h>

int main() {
  float var1, var2;

  printf("Введіть перше число: ");
  scanf("%f", &var1);

  printf("Введіть друге число: ");
  scanf("%f", &var2);

  if (var1 > var2) {
    printf("Перше число більше за друге.\n");
  } else if (var1 < var2) {
    printf("Друге число більше за перше.\n");
  } else {
    printf("Числа рівні.\n");
  }

  if (var1 >= var2) {
    printf("Перше число не менше за друге.\n");
  }

  if (var1 <= var2) {
    printf("Перше число не більше за друге.\n");
  }

  if (var1 != var2) {
    printf("Числа не рівні.\n");
  }

  if (var1) {
    printf("Перше число не дорівнює нулю.\n");
  }

  if (var2) {
    printf("Друге число не дорівнює нулю.\n");
  }

  if (var1 || var2) {
    printf("Принаймні одне з чисел не дорівнює нулю.\n");
  }

  if (var1 && var2) {
    printf("Обидва числа не дорівнюють нулю.\n");
  }

  return 0;
}

#include <stdio.h>
#define TRUE "ІСТИНА"
#define FALSE "ХИБНІСТЬ"

int main(void) {
    float var1, var2;
    printf("Введіть перше число (var1): ");
    scanf("%f", &var1);
    printf("Введіть друге число (var2): ");
    scanf("%f", &var2);
    printf("var1 > var2 це %s\n", var1 > var2 ? TRUE : FALSE);
    printf("var1 < var2 це %s\n", var1 < var2 ? TRUE : FALSE);
    printf("var1 == var2 це %s\n", var1 == var2 ? TRUE : FALSE);
    printf("var1 >= var2 це %s\n", var1 >= var2 ? TRUE : FALSE);
    printf("var1 <= var2 це %s\n", var1 <= var2 ? TRUE : FALSE);
    printf("var1 != var2 це %s\n", var1 != var2 ? TRUE : FALSE);
    printf("!var1 це %s\n", !var1 ? TRUE : FALSE);
    printf("!var2 це %s\n", !var2 ? TRUE : FALSE);
    printf("var1 || var2 це %s\n", var1 || var2 ? TRUE : FALSE);
    printf("var1 && var2 це %s\n", var1 && var2 ? TRUE : FALSE);
    return 0;
}
#include <stdio.h>

int main() {
    int x, y, z;
    x = 2;
    y = 1;
    z = 0;
    x = x && y || z;
    printf("%d\n", x);
    printf("%d\n", x || !y && z);

    return 0;
}

#include <stdio.h>

int main() {
  int a, b, c;

  a = 0;
  b = 3;
  c = 0;

  c = b % 2;  // Отримати залишок від ділення b на 2 і зберегти у c
  printf("a=%d, c=%d\n", a, c); 

  return 0;
}
#include <conio.h>

int main() {
  int a = 1, b = 0, c;

  c = (b ^ 2) || (a >= 0) && (++b * a) == 0;

  printf("c=%d\n", c);

  getch();

  return 0;
}
#include <stdio.h>

int main() {
    char x = 255, y = 0177; // Виправлено помилку: використовано символьний тип, а не беззнаковий
    printf("%u\n", (unsigned char)x & (unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    x = '(';
    y = 017;
    printf("%u\n", (unsigned char)x & ~(unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    y = 127;
    printf("%u\n", (unsigned char)x & (unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    y = 128;
    printf("%u\n", (unsigned char)x | (unsigned char)y); // Виправлено помилку: правильне відображення беззнакового значення
    return 0;
}
