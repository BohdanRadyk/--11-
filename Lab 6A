#define PI 3.14159
#include <stdio.h>

int main() {
    int a = 5;
    float b = 23.5;
    int c = 31000;

    printf("%d метрів тканини коштувало %f гривень.\n", a, b);
    printf("Значення числа pi рівне %f.\n", PI);

    printf("IBM-сумісні комп'ютери набули широкого розповсюдження.\n");
    printf("%c%d\n", '$', c);

    return 0;
}




#include <stdio.h>

int main() {
    printf("/%d\n", 557);
    printf("/%2d\n", 557);
    printf("/%10d\n", 557);
    printf("/%-10d\n", 557);

    return 0;
}




#include <stdio.h>

int main() {
    printf("/%f/\n", 6543.21);
    printf("/%e/\n", 6543.21);
    printf("/%4.2f/\n", 6543.21);
    printf("/%3.1f/\n", 6543.21);
    printf("/%10.3f/\n", 6543.21);
    printf("/%10.3e/\n", 6543.21);

    return 0;
}




#include <stdio.h>

#define riadok "Чудова погода"

int main() {
    printf("/%2s/\n", riadok);
    printf("/%15s/\n", riadok);
    printf("/%15.5s/\n", riadok);
    printf("/%-15.5s/\n", riadok);

    return 0;
}





