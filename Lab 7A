#include <stdio.h>
#include <conio.h> int main()
{
printf("Числа типу int займають %d байт.\n",sizeof(int));
 printf("Числа типу char займають %d байт.\n",sizeof(char)); printf("Числа типу float займають %d байт.\n",sizeof(float)); printf("Числа типу double займають %d байт.\n",siezof(double)); 
return 0;
}



int main() {
    int n = 1;
    printf("n=%d \n", n);
    
    // Постфіксний та префіксний інкремент ++
    printf("prefix: ++n=%d\n", ++n); // Збільшуємо n на 1 перед виводом
    printf("postfix: n++=%d\n", n++); // Виводимо поточне значення n, потім збільшуємо на 1
    printf("after-postfix: n=%d\n", n); // Виводимо нове значення n
    
    // Постфіксний та префіксний декремент --
    printf("prefix: --n=%d\n", --n); // Зменшуємо n на 1 перед виводом
    printf("postfix: n--=%d\n", n--); // Виводимо поточне значення n, потім зменшуємо на 1
    printf("after-postfix: n=%d\n", n); // Виводимо нове значення n
    
    return 0;
}





int main() {
    int n = 1, m = 1, res1, res2;
    res1 = n + (m--); // перед зменшенням m
    printf("res1 = %d\n", res1);
    res2 = m-- + n; // після зменшення m
    printf("res2 = %d\n", res2);
    return 0;
}





#include <stdio.h>
#include <conio.h> int main()
{ int a, b=3; float c;
c = b%2 + (a = ++b/2) + 1.1;
printf("a=%d,c=%4.1f\n",a,c);
}




#include <stdio.h> int main()
{
int x=2,z; float y = 2.1;
z = x++*y + y/x*3; 
printf("x=%d z=%d\n",x,z);
}




#include <stdio.h> int main()
{
float x = 1.1, y = 0, z; int a;
z = (a=x++)*y + 3*x; 
printf("z=%4.1f\n",z); }
  

