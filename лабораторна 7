\\приклад №1
#include<stdio.h>

int main()
{
  int a = 67;
  int b = 33;
  int c = a + b + 7;
  printf("a+b+7= %d \n", c);
  return 0;
}

\\приклад №2
#include<stdio.h>

int main()
{
  int a = 8;
  int b = 7;
  int c = a + 5 * b;
  printf("c= %d \n", c);
  return 0;
}

\\приклад №3
#include<stdio.h>

int main()
{
  int a = 8;
  int b = ++a;
  printf("a= %d \n", a);
  printf("b= %d \n", b);
  return 0;
}

\\приклад №4
